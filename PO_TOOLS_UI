  <script>
    function showToast(message) {
      const toast = document.getElementById('toast');
      toast.textContent = message;
      toast.style.display = 'block';
      setTimeout(() => { toast.style.display = 'none'; }, 3000);
    }

    function runFunction(funcName) {
      showToast(`Running ${funcName}...`);
      google.script.run
        .withSuccessHandler(result => showToast(result))
        .withFailureHandler(error => showToast(`Error in ${funcName}: ${error.message}`))
        [funcName]();
    }

    // Accordion toggle logic (works for nested accordions too)
    const headers = document.querySelectorAll('.accordion-header');
    headers.forEach(header => {
      header.addEventListener('click', (event) => {
        const content = header.nextElementSibling;
        const isActive = content.classList.contains('active');

        // Close all sibling content at the same nesting level
        const parent = header.parentElement;
        const siblings = Array.from(parent.children).filter(c => c !== header && c.classList.contains('accordion-content'));
        siblings.forEach(s => s.classList.remove('active'));

        // Toggle clicked section
        if (!isActive) content.classList.add('active');

        event.stopPropagation();
      });
    });

    // Click outside closes top-level accordions
    document.body.addEventListener('click', () => {
      document.querySelectorAll('.container > .accordion-content').forEach(c => c.classList.remove('active'));
    });
  </script>
</body>
