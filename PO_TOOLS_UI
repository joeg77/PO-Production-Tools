<body>
  <div class="container">
    <h1>PO PDF Tools</h1>

    <!-- PDF Operations -->
    <h2 class="accordion-header">PDF Operations</h2>
    <div class="accordion-content">
      <div class="button-group">
        <button class="remote-btn pdf" onclick="runFunction('renameTradingPartnerFiles')">Rename Trading Partner Packing Slips</button>
        <button class="remote-btn pdf" onclick="runFunction('renameShippingLabels')">Rename Shipping Labels</button>
        <button class="remote-btn pdf" onclick="runFunction('renameShippingManifestPDFs')">Rename Shipping Manifests</button>
        <button class="remote-btn pdf" onclick="runFunction('renameDDPOSFiles')">Rename DDPOS Files</button>
        <button class="remote-btn pdf" onclick="runFunction('copyTradingPartnerPDFs')">Copy Trading Partner Packing Slips</button>
        <button class="remote-btn pdf" onclick="runFunction('copyShippingLabelPDFs')">Copy Shipping Labels</button>
        <button class="remote-btn pdf" onclick="runFunction('copyShippingManifestPDFs')">Copy Shipping Manifests</button>
        <button class="remote-btn pdf" onclick="runFunction('prepareShippingDocuments')">Prepare Shipping Documents</button>
      </div>
    </div>

    <!-- Purge Operations -->
    <h2 class="accordion-header">Purge Operations</h2>
    <div class="accordion-content">
      <div class="button-group">
        <button class="remote-btn purge" onclick="runFunction('purgeDailyShippingDocs')">Purge Daily Shipping Docs</button>
        <button class="remote-btn purge" onclick="runFunction('purgeAllPDFs')">Purge All PDFs</button>
      </div>
    </div>

    <div id="toast"></div>
  </div>

  <script>
    function showToast(message) {
      const toast = document.getElementById('toast');
      toast.textContent = message;
      toast.style.display = 'block';
      setTimeout(() => { toast.style.display = 'none'; }, 3000);
    }

    function runFunction(funcName) {
      showToast(`Running ${funcName}...`);
      google.script.run
        .withSuccessHandler(result => showToast(result))
        .withFailureHandler(error => showToast(`Error in ${funcName}: ${error.message}`))
        [funcName]();
    }

    // Accordion logic
    const headers = document.querySelectorAll('.accordion-header');
    headers.forEach(header => {
      header.addEventListener('click', () => {
        document.querySelectorAll('.accordion-content').forEach(c => c.classList.remove('active'));
        const content = header.nextElementSibling;
        content.classList.add('active');
      });
    });
  </script>
