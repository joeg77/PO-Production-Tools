      <!-- Nested: Rename PDFs -->
      <h3 class="accordion-header">Rename PDFs</h3>
      <div class="accordion-content">
        <div class="button-group">
          <button class="remote-btn pdf" onclick="runFunction('renameTradingPartnerFiles')">Rename Trading Partner Packing Slips</button>
