  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const confirmOverlay = document.getElementById('confirmOverlay');
      const confirmMessageEl = document.getElementById('confirmMessage');
      const confirmBtnYes = document.getElementById('confirmBtnYes');
      const confirmBtnNo = document.getElementById('confirmBtnNo');

      function customConfirm(message) {
        confirmMessageEl.textContent = message;
        confirmOverlay.style.display = 'flex';

        return new Promise((resolve) => {
          confirmBtnYes.addEventListener('click', () => {
            confirmOverlay.style.display = 'none';
            resolve(true);
          }, { once: true });

          confirmBtnNo.addEventListener('click', () => {
            confirmOverlay.style.display = 'none';
            resolve(false);
          }, { once: true });
        });
      }

      function showToast(message) {
        const toast = document.getElementById('toast');
        toast.textContent = message;
        toast.style.display = 'block';
        setTimeout(() => { toast.style.display = 'none'; }, 3000);
      }

      const toastMessages = {
        'renameTradingPartnerFiles': 'Renaming Partner Slips...',
        'renameShippingLabels': 'Renaming Shipping Labels...',
        'renameShippingManifestPDFs': 'Renaming Manifests...',
        'renameFileToPDF': 'Fixing file extensions...',
        'renameTradingPartnerFilesThurs': 'Renaming Partner Slips (Thurs)...',
        'renameShippingLabelsThurs': 'Renaming Labels (Thurs)...',
        'renameShippingManifestPDFsThurs': 'Renaming Manifests (Thurs)...',
        'renameTradingPartnerFilesSun': 'Renaming Partner Slips (Sun)...',
        'renameShippingLabelsSun': 'Renaming Labels (Sun)...',
        'renameShippingManifestPDFsSun': 'Renaming Manifests (Sun)...',
        'copyTradingPartnerPDFs': 'Copying Partner Slips...',
        'copyShippingLabelPDFs': 'Copying Shipping Labels...',
        'copyShippingManifestPDFs': 'Copying Manifests...',
        'emailPageCountReport': 'Generating Pack Count Report...',
        'mergeManifests': 'Merging Manifests...',
        'moveShippingDocuments': 'Moving Docs to Email Folder...',
        'prepareShippingDocs': 'Running Email Prep...',
        'sendPdfsFromFolder': 'Attaching PDFs & sending email...',
        'purgeDailyShippingDocs': 'Purging Daily Docs...',
        'purgeAllPDFs': 'PURGING ALL PDFs...',
        'generateMenardsGreenLabels': 'Creating Green Labels...',
        'mergeGreenLabels': 'Merging Green Labels...'
      };

      window.runFunction = async function(funcName) {
        if (funcName === 'purgeDailyShippingDocs' || funcName === 'purgeAllPDFs') {
          let confirmMessage = 'Are you sure?';
          if (funcName === 'purgeDailyShippingDocs') {
            confirmMessage = 'ARE YOU SURE you want to purge the Daily Shipping Doc Folder?';
          } else if (funcName === 'purgeAllPDFs') {
            confirmMessage = 'DANGER: ARE YOU SURE you want to purge ALL PDFs? This cannot be undone.';
          }

          const confirmed = await customConfirm(confirmMessage);
          if (!confirmed) {
            showToast('Purge cancelled.');
            return;
          }
        } else if (funcName === 'sendPdfsFromFolder') {
          const confirmMessage = "Send email now? (Note: The automatic 11 PM email is still scheduled. This will send an extra email immediately.)";
          const confirmed = await customConfirm(confirmMessage);
          if (!confirmed) {
            showToast('Email send cancelled.');
            return;
          }
        }

        const defaultMessage = `Running ${funcName}...`;
        const initialMessage = toastMessages[funcName] || defaultMessage;

        showToast(initialMessage);

        google.script.run
          .withSuccessHandler(result => showToast(result))
          .withFailureHandler(error => showToast(`Error in ${funcName}: ${error.message}`))
          [funcName]();
      };
    });
  </script>
</body>
